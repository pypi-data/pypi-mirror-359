# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model Configuration
DEFAULT_MODEL_NAME=gpt-4.1-mini-2025-04-14
LLM_TEMPERATURE=0

# OpenAI Embeddings Configuration
EMBEDDING_MODEL=text-embedding-3-large

# Local LLM Server Configuration (Optional)
# Use these if you want to run a local LLM server instead of OpenAI
LOCAL_LLM_BASE_URL=http://127.0.0.1:1234/v1/
LOCAL_LLM_API_KEY=your_local_api_key_here
LOCAL_LLM_MODEL=gemma-3-4b-it-qat

# Vector Database Configuration
VECTOR_DB_PATH=./vector_db
VECTOR_DB_INDEX_TYPE=FLAT
VECTOR_DB_METRIC_TYPE=L2

# Memory Configuration
DEFAULT_TTL_SECONDS=86400  # 24 hours in seconds
MAX_SEARCH_RESULTS=5
ENABLE_DYNAMIC_FIELDS=true

# LangGraph Configuration
LANGGRAPH_ENV=development
LANGGRAPH_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Configuration
DEBUG=false
ENVIRONMENT=development

# Optional: Database Connection Settings
# Uncomment and configure if using external databases
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=your_neo4j_password

# Optional: Monitoring and Analytics
# PROMETHEUS_PORT=8000
# ENABLE_METRICS=false

# Optional: API Configuration
# API_HOST=localhost
# API_PORT=8080
# API_WORKERS=1
