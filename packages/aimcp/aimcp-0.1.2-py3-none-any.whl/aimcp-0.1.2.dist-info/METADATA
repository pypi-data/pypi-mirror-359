    tools_config_path="./tools_config.json",
    api_key="your-api-key",  # å¯é€‰ï¼Œä¹Ÿå¯é€šè¿‡ç¯å¢ƒå˜é‡è®¾ç½®
    model="gpt-4o-mini",
