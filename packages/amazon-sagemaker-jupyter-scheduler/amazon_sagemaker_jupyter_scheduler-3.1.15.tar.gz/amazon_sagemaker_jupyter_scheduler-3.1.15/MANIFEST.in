include pyproject.toml
include jupyter-config/amazon_sagemaker_jupyter_scheduler.json

include package.json
include install.json
include ts*.json
include yarn.lock

graft amazon_sagemaker_jupyter_scheduler/labextension
graft amazon_sagemaker_jupyter_scheduler/schemas
graft amazon_sagemaker_jupyter_scheduler/utils

# Javascript files
graft src
graft style
prune **/node_modules
prune dist

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints

include amazon_sagemaker_jupyter_scheduler/host_region_mapping.json *