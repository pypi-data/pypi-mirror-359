# APC Protocol Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-pro

# APC Protocol Configuration
APC_LOG_LEVEL=INFO
APC_GRPC_PORT_START=50051
APC_CHECKPOINT_BACKEND=memory  # Options: memory, redis, s3
APC_REDIS_URL=redis://localhost:6379/0
APC_AWS_REGION=us-east-1


# AWS S3 Configuration (if using S3 for checkpoints)
