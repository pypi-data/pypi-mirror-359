  APP_VERSION: dev=0.1.0 | prod=1.0.0
  DB_HOST: dev=dev-db.example.com | prod=prod-db.example.com
  DB_USER: dev=local_user | prod=prod_user1
  DB_PASSWORD: dev=dev_pass | prod=prod_#.!`~apass
