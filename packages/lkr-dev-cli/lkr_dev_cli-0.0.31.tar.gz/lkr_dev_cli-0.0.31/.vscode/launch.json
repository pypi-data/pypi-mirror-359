    "version": "0.2.0",
    "configurations": [
        {
            "name": "lkr auth login",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/lkr",
            "args": ["auth", "login"],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "lkr mcp run",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/lkr",
            "args": ["mcp", "run", "--debug"],
            "justMyCode": false, 
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "lkr tools access token updater",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/lkr",
            "args": ["tools", "user-attribute-updater"],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}