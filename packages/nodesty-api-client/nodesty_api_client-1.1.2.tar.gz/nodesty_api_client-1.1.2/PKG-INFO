        assert response.data and "@" in response.data.email, "KullanÄ±cÄ± bilgisi veya email bulunamadÄ±."
        print("KullanÄ±cÄ± servisi testi baÅŸarÄ±lÄ±!")


if __name__ == "__main__":
    asyncio.run(test_user_service())
