# Makefile for NusterDB Python Package

.PHONY: help dev build test clean install upload-test upload-prod release

# Default target
help:
	@echo "NusterDB Python Package - Available Commands:"
	@echo ""
	@echo "  dev          - Build and install for development"
	@echo "  build        - Build production wheels"
	@echo "  test         - Run test suite"
	@echo "  examples     - Run example scripts"
	@echo "  clean        - Clean build artifacts"
	@echo "  install      - Install from built wheel"
	@echo "  upload-test  - Upload to Test PyPI"
	@echo "  upload-prod  - Upload to Production PyPI"
	@echo "  release      - Complete build and upload pipeline"
	@echo "  fmt          - Format Rust code"
	@echo "  lint         - Run Rust linter"
	@echo ""

# Development build
dev:
	@echo "ğŸ”§ Building for development..."
	maturin develop

# Production build
build:
	@echo "ğŸ”¨ Building production wheels..."
	@./build.sh

# Run tests
test:
	@echo "ğŸ§ª Running tests..."
	python test_nusterdb.py

# Run examples
examples:
	@echo "ğŸ“š Running examples..."
	python examples.py

# Clean build artifacts
clean:
	@echo "ğŸ§¹ Cleaning build artifacts..."
	rm -rf target/
	rm -rf dist/
	rm -rf *.egg-info/
	rm -rf python/nusterdb/__pycache__/
	rm -rf __pycache__/
	find . -name "*.pyc" -delete
	find . -name "*.pyo" -delete
	find . -name "*_db" -type d -exec rm -rf {} + 2>/dev/null || true

# Install from built wheel
install: build
	@echo "ğŸ“¦ Installing from wheel..."
	pip install --force-reinstall dist/*.whl

# Upload to Test PyPI
upload-test: build
	@echo "ğŸ§ª Uploading to Test PyPI..."
	twine upload --repository testpypi dist/*

# Upload to Production PyPI
upload-prod: build
	@echo "ğŸš€ Uploading to Production PyPI..."
	twine upload dist/*

# Complete release pipeline
release:
	@echo "ğŸ‰ Running complete release pipeline..."
	@./release.sh

# Format Rust code
fmt:
	@echo "ğŸ¨ Formatting Rust code..."
	cargo fmt

# Run Rust linter
lint:
	@echo "ğŸ” Running Rust linter..."
	cargo clippy -- -D warnings

# Check dependencies
check-deps:
	@echo "ğŸ” Checking dependencies..."
	@command -v rustc >/dev/null 2>&1 || { echo "âŒ Rust not installed. Please install from https://rustup.rs/"; exit 1; }
	@command -v python >/dev/null 2>&1 || { echo "âŒ Python not installed."; exit 1; }
	@python -c "import maturin" 2>/dev/null || { echo "âŒ maturin not installed. Run: pip install maturin"; exit 1; }
	@echo "âœ… All dependencies are installed"

# Development environment setup
setup: check-deps
	@echo "ğŸ› ï¸ Setting up development environment..."
	pip install --upgrade pip
	pip install maturin twine pytest numpy
	@echo "âœ… Development environment ready"

# All-in-one development command
all: clean setup dev test
	@echo "ğŸ‰ Development build completed successfully!"
