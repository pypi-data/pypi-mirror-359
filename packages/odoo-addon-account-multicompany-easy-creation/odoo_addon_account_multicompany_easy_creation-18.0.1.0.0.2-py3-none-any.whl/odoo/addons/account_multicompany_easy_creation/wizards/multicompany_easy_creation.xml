<odoo>
    <record id="wizard_multicompany_easy_creation_view_form" model="ir.ui.view">
        <field name="name">Quick Company Creation</field>
        <field name="model">account.multicompany.easy.creation.wiz</field>
        <field name="arch" type="xml">
            <form string="Fill company data">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <notebook>
                        <page string="Account" name="account">
                            <group string="Currency" groups="base.group_multi_currency">
                                <field name="currency_id" />
                            </group>
                            <group string="Chart Template">
                                <field name="chart_template" />
                            </group>
                            <group col="1" string="Accounts">
                                <group
                                    string="Smart search to set specific accounts in products, categories, partners, ..."
                                >
                                    <field name="smart_search_specific_account" />
                                </group>
                                <group
                                    string="Smart search to set specific fiscal position in partners"
                                >
                                    <field name="smart_search_fiscal_position" />
                                </group>
                            </group>
                        </page>
                        <page string="Taxes">
                            <group string="Smart search to set product taxes">
                                <field name="smart_search_product_tax" />
                            </group>
                            <group string="Update default taxes">
                                <field name="update_default_taxes" />
                            </group>
                            <group invisible="not update_default_taxes">
                                <!-- The invisible default_sale_tax_options field should not be deleted, it is necessary for the correct functioning of the dynamic_selection widget. !-->
                                <field name="default_sale_tax_options" invisible="1" />
                                <field
                                    name="default_sale_tax"
                                    widget="dynamic_selection"
                                    options="{'available_field': 'default_sale_tax_options'}"
                                    invisible="not chart_template"
                                />
                                <field name="force_sale_tax" />
                            </group>
                            <group invisible="not update_default_taxes">
                                <!-- The invisible default_purchase_tax_options field should not be deleted, it is necessary for the correct functioning of the dynamic_selection widget. !-->
                                <field
                                    name="default_purchase_tax_options"
                                    invisible="1"
                                />
                                <field
                                    name="default_purchase_tax"
                                    widget="dynamic_selection"
                                    options="{'available_field': 'default_purchase_tax_options'}"
                                    invisible="not chart_template"
                                />
                                <field name="force_purchase_tax" />
                            </group>
                        </page>
                        <page string="Banks">
                            <field name="bank_ids">
                                <list editable="bottom">
                                    <field name="acc_number" />
                                    <field name="bank_id" />
                                    <field
                                        name="allow_out_payment"
                                        widget="boolean_toggle"
                                    />
                                </list>
                            </field>
                        </page>
                        <page string="Users">
                            <field name="user_ids" />
                        </page>
                        <page string="Sequences">
                            <field name="sequence_ids">
                                <list>
                                    <field name="code" />
                                    <field name="name" />
                                    <field name="prefix" />
                                    <field name="padding" />
                                    <field name="number_increment" />
                                    <field name="implementation" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button
                        name="action_accept"
                        type="object"
                        string="Accept"
                        class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="wizard_multicompany_easy_creation_action">
        <field name="name">Company easy creation</field>
        <field name="res_model">account.multicompany.easy.creation.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem
        id="multicompany_easy_creation_menu"
        name="Company easy creation"
        action="wizard_multicompany_easy_creation_action"
        parent="base.menu_users"
        sequence="180"
        groups="base.group_no_one"
    />
</odoo>
