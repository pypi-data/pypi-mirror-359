<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_es_pos.res_config_settings_view_form" />
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='l10n_es_pos_simp_limit']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="pos_tbai_section"
                    attrs="{'invisible': [('tbai_enabled', '=', False)]}"
                >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">TicketBAI</span>
                        <div class="text-muted">
                            PoS TicketBAI Configuration
                        </div>

                        <div class="content-group mt16">
                            <div class="row">
                                <label
                                    for="pos_tbai_device_serial_number"
                                    string="Device Serial Number"
                                    class="col-lg-3 o_light_label"
                                />
                                <i
                                    class="fa fa-info-circle me-1 oe_inline"
                                    title="PoS Device Serial Number. As of TicketBAI v1.1, is not required."
                                    pos-data-toggle="tooltip"
                                />
                                <field
                                    name="pos_tbai_device_serial_number"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                            </div>
                            <div class="row">
                                <label
                                    for="pos_tbai_certificate_id"
                                    string="Certificate"
                                    class="col-lg-3 o_light_label"
                                />
                                <i
                                    class="fa fa-info-circle me-1 oe_inline"
                                    title="TicketBAI Certificate (optional). If not set, the certificate from the company is used instead."
                                    pos-data-toggle="tooltip"
                                />
                                <field
                                    name="pos_tbai_certificate_id"
                                    options="{'no_create': True, 'no_open': True}"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                            </div>

                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
