<odoo>
    <record
        id="view_account_invoice_filter_inherit_partner_code_program_territory"
        model="ir.ui.view"
    >
        <field
            name="name"
        >account.invoice.select.inherit.partner.code.program.territory</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="code_program_territory_id" />
            </xpath>
            <xpath expr="//group/filter[@name='salesperson']" position="after">
                <filter
                    string="Code Program Territory"
                    name="code_program_territory"
                    domain="[]"
                    context="{'group_by': 'code_program_territory_id'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
