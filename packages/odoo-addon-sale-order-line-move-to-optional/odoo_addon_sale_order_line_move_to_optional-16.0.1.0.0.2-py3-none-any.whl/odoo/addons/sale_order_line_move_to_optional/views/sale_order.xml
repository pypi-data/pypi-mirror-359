<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form_move_line_optional" model="ir.ui.view">
        <field name="name">sale.order.form.mvove.optional</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <xpath
                expr="/form/sheet/notebook/page[@name='order_lines']//tree"
                position="inside"
            >
                <button
                    type="object"
                    class="fa fa-list-alt"
                    name="move_line_to_optional"
                    title="Move to optional"
                />
            </xpath>
        </field>
    </record>
</odoo>
