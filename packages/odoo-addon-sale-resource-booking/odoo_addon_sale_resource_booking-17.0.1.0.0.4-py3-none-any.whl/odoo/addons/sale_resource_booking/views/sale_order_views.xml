<data>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">Display resource booking info in form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <button name="action_cancel" position="before">
                <button
                    name="action_bookings_resync"
                    type="object"
                    invisible="state not in ('draft', 'sent', 'sale')"
                    string="Sync bookings"
                    help="(Re)sync resource bookings. The sync will be done automatically when confirming the quotation, but you can do it beforehand if needed with this button. It will create missing resource bookings in pending state, or cancel the spare ones."
                    groups="resource_booking.group_user"
                />
            </button>
            <div name="button_box" position="inside">
                <button
                    name="action_open_resource_bookings"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-calendar-check-o"
                    invisible="resource_booking_count==0"
                    groups="resource_booking.group_user"
                >
                    <field
                        name="resource_booking_count"
                        widget="statinfo"
                        string="Bookings"
                    />
                </button>
            </div>
        </field>
    </record>
</data>
