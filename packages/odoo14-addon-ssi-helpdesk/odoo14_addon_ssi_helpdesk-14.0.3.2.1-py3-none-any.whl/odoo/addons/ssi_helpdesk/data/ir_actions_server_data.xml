<data>
<!-- Communication -->
<record id="helpdesk_communication_action_open" model="ir.actions.server">
    <field name="name">Action Open</field>
    <field name="model_id" ref="model_helpdesk_communication" />
    <field name="state">code</field>
    <field name="code">records.action_open()</field>
</record>

<record id="helpdesk_communication_action_restart" model="ir.actions.server">
    <field name="name">Action Done</field>
    <field name="model_id" ref="model_helpdesk_communication" />
    <field name="state">code</field>
    <field name="code">records.action_restart()</field>
</record>

<!-- Ticket -->
<record id="helpdesk_ticket_action_done" model="ir.actions.server">
    <field name="name">Action Done</field>
    <field name="model_id" ref="model_helpdesk_ticket" />
    <field name="state">code</field>
    <field name="code">records.action_done()</field>
</record>
</data>
