# MANIFEST.in - Include additional files in the package distribution

# Documentation files
include README.md
include QUICK_START.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Configuration files
include pyproject.toml
include setup.py
include setup.cfg

# Examples
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.csv

# Tests (if present)
recursive-include tests *.py

# Documentation source
recursive-include docs *.rst
recursive-include docs *.md
recursive-include docs *.py
recursive-include docs Makefile
recursive-include docs *.bat

# Package data
recursive-include src/oect_transfer_analysis *.json
recursive-include src/oect_transfer_analysis *.yaml
recursive-include src/oect_transfer_analysis *.yml

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude .tox

# Exclude build artifacts
prune build
prune dist
prune *.egg-info