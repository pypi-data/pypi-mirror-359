{
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run poe build"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash.*",
        "hooks": [
          {
            "type": "command",
            "command": "source .venv/bin/activate || echo 'no venv found'"
          }
        ]
      }
    ]
  }
}